<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/background.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css"
    integrity="sha384-r4NyP46KrjDleawBgD5tp8Y7UzmLA05oM1iAEQ17CSuDqnUK2+k9luXQOfXJCJ4I" crossorigin="anonymous">
<h2>Current User: <%= currentUser.username%></h2>
<h4>Spots added by you</h4>
<div><% for (let spot of spots){%>
    <%  if( currentUser && spot.author.equals(currentUser._id))  {%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <%if(spot.images.length) {%>
                <img class="img-fluid" alt="" width="500" height="350" src="<%=spot.images[0].url%>">
                <% }else {%>
                <img class="img-fluid" width="500" height="350" alt=""
                    src="https://images.unsplash.com/photo-1609642779314-20faa2c9a7cd?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1300&q=80">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= spot.title %> </h5>
                    <p class="card-text"><%= spot.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= spot.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/spots/<%=spot._id%>">View <%=spot.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
    <% }%>
</div>